{% extends "EmployeeBundle:layout:layout_loggedIn.html.twig" %}
{% block title %}Deduction{% endblock %}
{% block body %}
	<div class="row top-container">

		<div class="top-header ">Add New Deduction Claim</div>
	</div>
	<div class="col col-md-12 admin-top-support">
			<button class="button-primary-danger go-back">Go Back</button>
		</div>
	<div class="row">
		<form action="{{path('newDeductionClaimSubmit')}}" method="POST">
			<div class="col col-md-6">
				<div class="form-item-container">
								<label class="form-item-Label">Employee Id</label>
								<input class="form-item-input" type="text" name="employeeId" value="{{app.user.nID}}" readonly></input>
							</div>
							<div class="form-item-container">
								<label class="form-item-Label">Deduction Amount</label>
								<input class="form-item-input" type="number" name="deduction_amount" required="required"></input>
							</div>
			</div>
			<div class="col col-md-6"></div>
			<div class="col col-md-12">
			<button class="button-primary form-submit" type="submit">Claim</button>
		</div>
		</form>
	</div>
{% endblock %}
{% block javascripts %}


<script type="text/javascript">
	$(document).ready(function () {
		$('.go-back').click(function(){
				window.location = location.origin + "/auth/deduction-claim"
			});
		
	});
	</script>
{% endblock %}