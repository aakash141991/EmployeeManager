{% extends "EmployeeBundle:layout:layout-admin.html.twig" %}

{% block title %}Designation{% endblock %}
{% block body %}
<div class="row top-container">
	<div class=" top-header">
			Update Designations
		</div>
		<div class="col col-md-12 admin-top-support">
			<button class="button-primary add-new-designation">Add New</button>
		</div>
		<div class="col col-md-12 table-container">
			{% if message %}
				<div class="message-wrapper col col-md-8 ">
					<div>{{message}}</div>
				</div>
			{% elseif errormessage %}
				<div class="error-message-wrapper col col-md-8 ">
					<div>{{errormessage}}</div>
				</div>
			{% endif %}
			<table class="display-assets-table" id="displayTable">
			<thead>
				<tr>
				<th>sr. no</th>
				<th>Designation Name</th>
				
				<th>Action</th>
			</tr>
			</thead>
			<tbody>
			{% set count = 0 %}
			{% for designation in designations %}
				{% set count = count + 1 %}
       			 <tr>
       			 	<td>{{ count }}</td>
       			 	<td>{{ designation.name }}</td>
       			 	<td><button class="button-form-type udpdate-this-designation"  data-id="{{designation.id}}">update</button> <button data-toggle="modal" data-target="#delete"   data-id="{{designation.id}}" class="button-form-type-danger delete-designation">Delete</button></td>
       			 	
       			 </tr>
   			 {% endfor %}
			
			</tbody>
		</table>

			<!-- Delete Modal -->	
			 	<div id="delete" class="modal fade" role="dialog">
			  <div class="modal-dialog">

			    <!-- Modal content-->
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal">&times;</button>
			        <h4 class="modal-title">Delete Designation</h4>
			      </div>
			      <div class="modal-body">
			        <p>This Designation will be Deleted.</p>
			      </div>
			      <div class="modal-footer">
			      	<button type="button" class="btn button-primary delete-designation-confirm" data-dismiss="modal">Delete</button>
			        <button type="button" class="btn button-primary-danger " data-dismiss="modal">close</button>
			      </div>
			    </div>

			  </div>
			</div>
	</div>
</div>
{% endblock %}
{% block javascripts %}


<script type="text/javascript">
	$(document).ready(function () {
		var desgId="";
		$('.add-new-designation').click(function(){
				window.location = location.origin + "/admin/add-new-designation"
			});
		$('.udpdate-this-designation').click(function(){
			 desgId = $(this).attr("data-id");
				window.location = location.origin + "/admin/update-designation/"+desgId;
			});
		
		$('.delete-designation').click(function(){
				 desgId = $(this).attr("data-id");
			});
		$('.delete-designation-confirm').click(function(){
				window.location = location.origin + "/admin/delete-designation/"+desgId;
			});
		
		
		
	});
	</script>
{% endblock %}


