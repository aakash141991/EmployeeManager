{% extends "EmployeeBundle:layout:layout-admin.html.twig" %}
{% block title %}Role{% endblock %}
{% block body %}
<div class="row top-container">
	<div class=" top-header">
			Update Roles
		</div>
		<div class="col col-md-12 admin-top-support">
			<button class="button-primary add-role">Add New</button>
		</div>
		<div class="col col-md-12 table-container">
			{% if message %}
				<div class="message-wrapper col col-md-8 ">
					<div>{{message}}</div>
				</div>
			{% elseif errormessage %}
				<div class="error-message-wrapper col col-md-8 ">
					<div>{{errormessage}}</div>
				</div>
			{% endif %}
			<table class="display-assets-table" id="displayTable">
			<thead>
				<tr>
				<th>sr. no</th>
				<th>departmentName</th>
				<th>departmentRole</th>
				<th>Action</th>
			</tr>
			</thead>
			<tbody>
			{% set count = 0 %}
			{% for role in roles %}
				{% set count = count + 1 %}
       			 <tr>
       			 	<td>{{ count }}</td>
       			 	<td>{{ role.roleName }}</td>
       			 	<td>{{ role.roleActionName }} </td>
       			 	<td><button class="button-form-type update-this-role"  data-id="{{role.id}}">update</button> <button data-toggle="modal" data-target="#delete"   data-id="{{role.id}}" class="button-form-type-danger delete-role">Delete</button></td>
       			 	
       			 </tr>
   			 {% endfor %}
			
			</tbody>
		</table>

			<!-- Reject Modal -->	
			 	<div id="delete" class="modal fade" role="dialog">
			  <div class="modal-dialog">

			    <!-- Modal content-->
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal">&times;</button>
			        <h4 class="modal-title">Delete Role</h4>
			      </div>
			      <div class="modal-body">
			        <p>This Role will be Deleted.</p>
			      </div>
			      <div class="modal-footer">
			      	<button type="button" class="btn button-primary delete-role-confirm" data-dismiss="modal">Delete</button>
			        <button type="button" class="btn button-primary-danger " data-dismiss="modal">close</button>
			      </div>
			    </div>

			  </div>
			</div>
	</div>
</div>
{% endblock %}
{% block javascripts %}


<script type="text/javascript">
	$(document).ready(function () {
		var roleId="";
		$('.add-role').click(function(){
				window.location = location.origin + "/admin/add-new-role"
			});
		
		$('.update-this-role').click(function(){
			roleId = $(this).attr("data-id");
				window.location = location.origin + "/admin/update-roles/"+roleId
			});
		$('.delete-role').click(function(){
				 roleId = $(this).attr("data-id");
			});
		$('.delete-role-confirm').click(function(){
				window.location = location.origin + "/admin/delete-role/"+roleId;
			});
	});
	</script>
{% endblock %}
