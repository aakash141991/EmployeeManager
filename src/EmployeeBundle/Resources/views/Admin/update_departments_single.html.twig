{% extends "EmployeeBundle:layout:layout-admin.html.twig" %}
{% block title %}Department{% endblock %}
{% block body %}
<div class="row top-container">
	<div class=" top-header">
			Update Department
		</div>
		<div class="col col-md-12 admin-top-support">
			<button class="button-primary-danger go-back">Go Back</button>
		</div>
		{% if message %}
				<div class="message-wrapper col col-md-8 ">
					<div>{{message}}</div>
				</div>
			{% elseif errormessage %}
				<div class="error-message-wrapper col col-md-8 ">
					<div>{{errormessage}}</div>
				</div>
			{% endif %}
	<div class="col col-md-12">
		<form action="{{ path('updateDepartmentSubmit') }}" method="POST">

		<div class="row">
			<div class="col col-md-6">
				<input type="hidden" name="depId" value="{{department.id}}">
				<div class="form-item-container">
								<label class="form-item-Label">Department Name</label>
								<input class="form-item-input" type="text" name="departmentName" value="{{department.departmentName}}" required="required"></input>
							</div>
							<div class="form-item-container">
								<label class="form-item-Label">Department Head</label>
								<input id="employee_searching" list="suggestions" class="form-item-input" type="text" name="departmentHead" value="{{department.departmentHead}}"required="required" ></input>
								<datalist id="suggestions">
									 {% for employee in  allEmployees%}
									  <option value="{{employee.nID}}">{{employee.name}}</option>					
									  {% endfor %}
								</datalist>
							</div>
			</div>
			<div class="col col-md-6">
				
			</div>
		</div>
		<div class="row">
						<div class="col-md-12 form-apply-button-container">
							<button class="button-primary" type="submit">Update</button>
						</div>
					</div>

		</form>
	</div>
</div>
{% endblock %}
{% block javascripts %}


<script type="text/javascript">
	$(document).ready(function () {
		$('.go-back').click(function(){
				window.location = location.origin + "/admin/update-department"
			});
		
	});
	</script>
{% endblock %}

