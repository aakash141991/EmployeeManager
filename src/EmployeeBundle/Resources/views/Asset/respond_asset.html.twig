		        	setTimeout(function(){ 
		        		location.reload();
		        }, 500);
			});
			$('.reject-asset').click(function(){
				assetId=$(this).attr("data-id");
			});
			$('.reject-asset-confirm').click(function(){
				var Url=location.origin + "/auth/respond-asset-submit/"+assetId+"?resp=no";
		        	$.ajax({url: Url, success: function(result){
		        		
